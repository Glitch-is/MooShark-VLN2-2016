@model MooShark2.Models.GradesViewModel
    @{ 
        ViewBag.title = "Grades";
    }
<main class="cont">
    <div class="row nobot">
        <div class="col s6">
            <h3><span class="purple accent-1 purple-text text-accent-1 gray-text heading">_</span><span class="heading heading-text">Grades</span></h3>
        </div>
        <div class="col s6">
            <a class="right waves-effect blue lighten-1 waves-light btn backButton"><i class="material-icons left">navigate_before</i>back</a>
        </div>
    </div>
    
    <div class="row">
        <div class="col s12 m9">
            <ul class="collection z-depth-1">

                @foreach (var grade in Model.grades)
                {
                    <li class="collection-item avatar hover">
                        <i class="material-icons circle purple lighten-1"></i>
                        <div class="row nobot">
                            <div class="col s8">
                                <p class="title truncate">@string.Join(", ", Model.assignmentService.GetTeamMemberNames(Model.assignmentId, grade.teamId))</p>
                            </div>
                            <div class="col s2">
                                <i class="material-icons small left yellow-text">grade</i>
                                <p class="grade truncate" gradeid="@grade.id"> @grade.grade</p>
                            </div>
                            <div class="col s2">
                                <i class="material-icons add_fab tooltipped small right editGrade" data-position="left" data-tooltip="Edit" gradeid="@grade.id">edit</i>
                            </div>
                        </div>
                    </li>
                }

            </ul>
        </div>
</main>

<!-- Modal Structure -->

<div id="gradeModal" class="modal">
    <div class="modal-content">
        <div class="row nobot">
            <h5 class="modal-header purple-text">Edit Grade</h5>

            <div class="col s12">
                <div class="row nobot">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">grade</i>
                        <input id="gradeField" type="number" class="validate">
                        <label for="gradeField">Grade</label>
                    </div>
                </div>
                <div class="row nobot">
                    <a class="green waves-effect waves-light btn" id="submitGrade" action="/Grades/Edit/">Submit</a>
                </div>
            </div>
        </div>
    </div>
</div>
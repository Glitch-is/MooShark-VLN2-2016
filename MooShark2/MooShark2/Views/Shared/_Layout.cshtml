        <ul id="userdropdown" class="dropdown-content blue-text">
            <li>@Html.ActionLink("Home", "Index")</li>
            <li class="divider"></li>
            <li><a href="@Url.Action("Index", "Admin")">Admin Panel</a></li>
            <li><a href="@Url.Action("Index", "Profile")">Profile</a></li>
            <li><a href="/Account/Logout">Logout</a></li>

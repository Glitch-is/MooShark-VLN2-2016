@model IEnumerable<MooShark2.courses>

@{
    ViewBag.Title = "Courses";
}


<main class="cont">
    <div class="row nobot">
        <div class="col s6">
            <h3><span class="purple purple-text heading">_</span><span class="heading heading-text"> Courses</span></h3>
        </div>
        <div class="col s6">
            <a class="right waves-effect blue lighten-1 waves-light btn backButton"><i class="material-icons left">navigate_before</i>back</a>
        </div>
    </div>
    <div class="row">
        <div class="col s12 m12">
            <ul class="collection z-depth-1">
                @foreach (var item in Model)
                {
                    <a class="collection-link" href="@Url.Action("Index", "Assignments", new { id = item.id })">
                        <li class="collection-item avatar hover">
                            <img src="@item.teachers.FirstOrDefault().account.imagePath" alt="" class="circle">
                            <div class="row nobot">
                                <div class="col s3">
                                    <div class="title truncate">@item.name</div>
                                </div>
                                <div class="col s6">
                                    <p class="description truncate">@item.description</p>
                                </div>
                                <div class="col s2">
                                    <p class="due truncate" style="font-style: italic">@item.teachers.FirstOrDefault().account.name</p>
                                </div>
                                <i class="small material-icons grey-text text-lighten-1 col s1">info</i>
                                
                            </div>
                            
                        </li>
                    </a>

                }
            </ul>
        </div>
     </div>
</main>
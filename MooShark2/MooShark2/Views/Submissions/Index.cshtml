@model MooShark2.Models.SubmissionsViewModel

@{
    ViewBag.Title = "Index";
}

<main class="cont">
    <div class="row nobot">
        <div class="col s6">
            <h3><span class="green green-text lighten-3 text-lighten-3 heading">_</span><span class="heading heading-text"> Submissions</span></h3>
        </div>
        <div class="col s6">
            <a class="right waves-effect blue lighten-1 waves-light btn backButton"><i class="material-icons left">navigate_before</i>back</a>
        </div>
    </div>
    <div class="row">
        <div class="col s12">
            <ul class="collection z-depth-1">
                @foreach(var submission in Model.submissions)
                {
                    <a class="collection-link" href="/Submissions/Submission/@submission.id">
                        <li class="collection-item avatar">
                            <i class="material-icons circle brown lighten-1">gavel</i>
                            <div class="row nobot">
                                <div class="col s3">
                                    <p class="title truncate">@submission.problem.name</p>
                                </div>
                                <div class="col s3">
                                    <p class="description time truncate">@submission.submitted</p>
                                </div>
                                <div class="col s3">
                                    <p class="description center truncate"><span class="submission-language yellow darken-2">@Model.ideOne.getLanguageFromId(Convert.ToInt32(submission.languageId))</span></p>
                                </div>
                                <div class="col s2">
                                    <p class="description truncate">@submission.status</p>
                                </div>
                                <div class="col s1">
                                    <span class="secondary-content right">
                                        @if (submission.status == "Accepted")
                                        {
                                            <i class="small material-icons green-text">done</i>
                                        }
                                        else if(submission.status == "Compilation Error")
                                        {
                                            <i class="small material-icons yellow-text text-darken-3">bug_report</i>
                                        }
                                        else
                                        {
                                            <i class="small material-icons red-text">clear</i>
                                        }
                                    </span>
                                </div>
                            </div>
                        </li>
                    </a>
                }
            </ul>
        </div>
    </div>
</main>

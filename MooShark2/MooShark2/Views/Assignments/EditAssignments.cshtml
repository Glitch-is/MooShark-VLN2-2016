@model MooShark2.assignment


    @{
        ViewBag.Title = "Edit Assignment";
    }


    <main class="cont">
        <div class="row nobot">
            <div class="col s6">
                <h3><span class="cyan cyan-text heading">_</span><span class="heading heading-text">Edit assignment</span></h3>
            </div>
            <div class="col s6">
                <a class="right waves-effect blue lighten-1 waves-light btn backButton"><i class="material-icons left">navigate_before</i>back</a>
            </div>
        </div>
        <div class="row">
            <div class="col s12 m12">
                <div class="row nobot">
                    <div class="col s12 m8">
                       
                        <div class="panel problem z-depth-1">
                            <div class="row nobot">
                                <h5>Name</h5>
                                <p>
                                    @Model.name<br />
                                </p>
                                <h5>Description</h5>
                                <p>
                                    @Model.description<br />
                                </p>
                                <p>
                                    <h5>Deadline</h5>
                                    @Model.deadline
                                </p>
                            </div>
                            <a href="#editAssignmentModal" class="waves-effect waves-light btn green modal-trigger editAssign" assignId="@Model.id"  ><i class="material-icons left">edit</i>Edit Assignment</a>
                            <a href="#deleteAssignmentModal" class="waves-effect waves-light btn red modal-trigger delAssign" delAssignId="@Model.id"><i class="material-icons left">delete</i>Delete Assignment</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>


<!--  Edit Modal -->
<div id="editAssignmentModal" class="modal">
    <div class="modal-content" style="max-height: 450px; overflow-y: scroll;">
        <div class="row nobot">
            <h4 class="modal-header blue-text">Edit Assignment</h4>
            <form id="editAssignmentFormPost" modelAssignId="@Model.id"class="col s12" action="">
                <div class="row">
                    <div class="input-field col s12">
                        <input id="name" type="text" class="validate" name="name">
                        <label for="name">Name</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="deadline" class="datepicker" type="date">
                        <label for="deadline">Deadline</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <textarea id="compose" class="materialize-textarea" length="500" name="compose"></textarea>
                        <label for="compose">Description</label>
                        <span class="character-counter" style="float: right; font-size: 12px; height: 1px;"></span>
                    </div>
                </div>                
                <input type="submit" value="Submit" class="modal-submit modal-action waves-effect waves-blue green btn right " />
            </form>
        </div>
    </div>
</div>


<!-- Delete Modal -->
<div id="deleteAssignmentModal" class="modal">
    <div class="modal-content" style="max-height: 450px; overflow-y: scroll;">
        <div class="row nobot">
            <h4 class="modal-header blue-text">Delete Assignment</h4>
            
                <div class="row">
                    <div class="input-field col s6 m12 L12">
                        <h4>Are you sure you want to delete @Model.name.</h4>
                    </div>
                </div> 
            <div>
                <a class="modal-action modal-close waves-effect waves-light btn green deleteAsignment" delAssignId="@Model.id"><i class="material-icons right">delete</i>Delete</a>
            
                <a class="waves-effect waves-light btn red modal-action modal-close"><i class="material-icons left">not_interested</i>No</a>
            </div>
         </div>
    </div>
</div>



            
            
            
        
@model MooShark2.Models.Courses
        <h3><span class="purple purple-text heading">_</span><span class="heading heading-text"> Courses</span></h3>
        <div class="row">
            <div class="col s12">
                <ul class="collection z-depth-1">
			@if (Model != null)
			{
			foreach (var course in Model.Courses)
			{
                    <a class="collection-link" href="course.html">
                        <li class="collection-item avatar hover">
                            <img src="" alt="" class="circle">
                            <div class="row nobot">
                                <div class="col s3">
                                    <p class="title truncate">@course.name</p>
                                </div>
                                <div class="col s6">
                                    <p class="description truncate">@course.description</p>
                                </div>
                                <div class="col s3">
                                    <p class="due truncate" style="font-style: italic;">@course.teacher</p>
                                </div>
                            </div>
                            <a href="#!" class="secondary-content"><i class="small material-icons grey-text text-lighten-1">info</i></a>
                        </li>
                    </a>
					}
					}
                </ul>
            </div>
        </div>
		<!-- Modal Structure -->
		<div id="addModal" class="modal">
			<div class="modal-content">
				<div class="row nobot">
					<h4 class="modal-header blue-text">Add Course</h4>
					<form id="addProblem" class="col s12">
						<div class="row">
							<div class="input-field col s12">
								<input id="name" type="text" class="validate">
								<label for="name">Name</label>
							</div>
						</div>
						<div class="row">
							<div class="input-field col s12">
								<input id="teacher" type="text" class="validate">
								<label for="teacher">Name</label>
							</div>
						</div>
						<div class="row">
							<div class="input-field col s12">
								<textarea id="compose" class="materialize-textarea" length="500"></textarea>
								<label for="compose">Description</label>
								<span class="character-counter" style="float: right; font-size: 12px; height: 1px;"></span></div>
						</div>
						<input type="submit" value="Submit" class="modal-submit modal-action modal-close waves-effect waves-blue green btn right"/>
					</form>
				</div>
			</div>
		</div>
